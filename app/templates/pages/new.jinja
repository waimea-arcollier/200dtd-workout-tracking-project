{#=====================================================
  Things list page
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    <title>Workout App - New Workout </title>

    <header id="info_header">
            <h2>Add Workout</h2>
            <h2>{{today_date}}</h2>
    </header>

{% endblock %}


{% block content %}
<section class="page-title">
    <h3>New Workout</h3>
</section>
    <article class="form">

        <form action="/add" method="POST" class="new_workout">

            <h5>Name</h5>
            <input
                type="text"
                name="name"
                maxlength="16"
                placeholder="Name"
                required
            >

            <h5>Instruction Video</h5>
            <input
                type="text"
                name="video_link"
                placeholder="https://..."
            >

            <h5>Reps Goal</h5>
            <input
                type="number"
                name="reps_target"
                min="0"
                max="999"
                placeholder="0"
                required
            >
            
            <h5>Notes</h5>
            <input
                type="text"
                name="notes"
                placeholder="Notes"
            >

            <button class="submit">Add Workout</button>

        </form>

    </article>

    <section class="gap">
    <p class="spacers">
    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
    </p> 
    </section>

{% endblock %}

{% block footer %}
    <nav>
            <ul>
                <li><a href="/"><img src="/static/images/home.svg" alt="Home"></a></li>
                <li><a href="/new"><img src="/static/images/new.svg" alt="New Workout"></a></li>      
            </ul>
    </nav>
{% endblock %}
