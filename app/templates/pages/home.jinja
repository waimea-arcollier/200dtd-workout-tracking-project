{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}
    <title>Workout App - Home </title>

    <header id="info_header">
            <h2>Welcome! </h2>
            <h2>{{today_date}}</h2>
    </header>

{% endblock %}


{% block content %}
<section class="page-title">
    {%if day_of_week in (4,6,7)%}
    <h2>No workouts today!</h2>
    {%else%}
    <h2>Workouts Completed: {{ workouts[0].total_completed }}</h2>
    {%endif%}
</section>

    <article id="workout_table">
        <table>
            <tr>
                <th colspan="2" class="workout-title">Workout</th>
                <th class="reps-title">Reps</th>
                <th class="form-title"></th>
            </tr>
            {% for workout in workouts %}

                <tr class="workout">
                    

                    <td class="workout-icon">
                        â“˜
                    </td>
                    
                    <td class="workout-name">
                        <a href="/workout/{{ workout.id }}">
                            {{ workout.name }}
                        </a>
                    </td>
                    
                    <td class="workout-reps">
                        {{ workout.reps_target }}
                    </td>

                    <td class="workout-form">
                        <form method="POST" action="/workout/{{ workout.id }}">
                            <input 
                                name="done" 
                                type="checkbox" 
                                onchange="this.form.submit()"
                                {%if workout.done > 0 %}
                                   checked disabled
                                {%endif%}
                                {%if day_of_week in (4,6,7)%}
                                    disabled
                                {%endif%}
                            >
                            
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </article>
    
    <section class="gap">
    <p class="spacers">
    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
    </p> 
    </section>

{% endblock %}

{% block footer %}
    <nav>
            <ul>
                <li><a href="/"><img src="/static/images/home.svg" alt="Home"></a></li>
                <li><a href="/new"><img src="/static/images/new.svg" alt="New Workout"></a></li>
            </ul>
    </nav>
{% endblock %}
